{
  "trailingComma": "none",
  "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc",
        "useTabs": true,
        "tabWidth": 4
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.{cls,trigger}",
      "options": {
        "parser": "apex",
        "useTabs": true,
        "tabWidth": 4
      }
    },
    {
      "files": "scripts/**/*.apex",
      "options": {
        "parser": "apex-anonymous",
        "useTabs": true,
        "tabWidth": 4
      }
    },
    {
      "files": "{.*rc, *.xml}",
      "options": {
        "bracketSameLine": true
      }
    }
  ]
}
