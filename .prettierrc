{
  "trailingComma": "none",
  "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": { "parser": "lwc" }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": { "parser": "html" }
    },
    {
      "files": "*.{cls,trigger}",
      "options": {
        "useTabs": true,
        "tabWidth": 4
      }
    },
    {
      "files": "*.xml",
      "options": {
        "printWidth": 120
      }
    }
  ]
}