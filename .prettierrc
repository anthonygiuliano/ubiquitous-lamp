{
  "trailingComma": "es5",
  "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
  "overrides": [
    {
      "files": "**/lwc/**/*.html",
      "options": {
        "parser": "lwc"
      }
    },
    {
      "files": "*.{cmp,page,component}",
      "options": {
        "parser": "html"
      }
    },
    {
      "files": "*.{cls,trigger}",
      "options": {
        "parser": "apex"
      }
    },
    {
      "files": "scripts/**/*.apex",
      "options": {
        "parser": "apex-anonymous"
      }
    },
    {
      "files": "*.xml",
      "options": {
        "parser": "xml",
        "xmlWhitespaceSensitivity": "strict",
        "xmlSelfClosingSpace": true
      }
    }
  ]
}
